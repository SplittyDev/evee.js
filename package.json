{
  "name": "evee",
  "version": "3.0.0",
  "description": "The lightweight ES6 event library.",
  "main": "dist/esm/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:browser",
    "build:esm": "npx babel lib/evee.js --out-file dist/esm/index.js --env-name=esm",
    "build:cjs": "npx babel lib/evee.js --out-file dist/cjs/index.js --env-name=cjs",
    "build:browser": "npx babel lib/evee.js --out-file dist/browser/index.js --env-name=browser",
    "test": "npx mocha test.js",
    "bench": "node benchmark.js",
    "test-dev": "npm run build && npm run test",
    "bench-dev": "npm run build && npm run bench",
    "prepublish": "npm run build"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "files": [
    "lib",
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SplittyDev/evee.js.git"
  },
  "keywords": [
    "event",
    "events",
    "dispatch",
    "subscribe",
    "async"
  ],
  "author": "Marco Quinten <splittydev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SplittyDev/evee.js/issues"
  },
  "homepage": "https://github.com/SplittyDev/evee.js",
  "devDependencies": {
    "@babel/cli": "^7.24.6",
    "@babel/core": "^7.24.6",
    "@babel/plugin-transform-modules-commonjs": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "benchmark": "^2.1.4",
    "mocha": "^10.4.0"
  }
}
